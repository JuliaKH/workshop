mixin sign-in
    .sign-in__button.sign-in__button--active Sign in
    .sign-out__button Sign out
    #myForm.form-popup
        form.form-container(action='')
            h1 Login
            label(for='email')
                b Email
            input(type='text', placeholder='Enter Email', name='email', required='')
            label(for='psw')
                b Password
            input(type='password', placeholder='Enter Password', name='psw', required='')
            button.btn.login-btn(type='button') Login
            button.btn.register-btn(type='button') Register
            button.btn.google-btn(type='button') Sign in with Google
